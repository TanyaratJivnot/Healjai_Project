<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/test.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/consult.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <%- include('navAdmin') %>
    <br>
    <div class="container" style="margin-top: 100px;">
        <div class="row">
            <div class="col d-flex justify-content-center">
               <form id="formR1" style="background-color: #F5F7FB;border: 1px solid rgba(173, 172, 173, 0.22);
               box-shadow: inset 0px 1px 7px rgba(121, 121, 121, 0.25);
               border-radius: 19px;height: 57px;">
                    <div class="form-group row mb-3">
                        <label class="col-sm-4 col-form-label d-flex justify-content-center">
                            <h6 style="margin-top: 10px;color: #7b7878cc;"><b>
                                Name
                            </b></h6>
                        </label>
                        <label class="col-sm-4 col-form-label d-flex justify-content-center">
                            <h6 style="margin-top: 10px;color: #7b7878cc;"><b>
                                ID Card
                            </b></h6>
                        </label>
                        <label class="col-sm-4 col-form-label d-flex justify-content-center">
                            <h6 style="margin-top: 10px;color: #7b7878cc;"><b>
                                State
                            </b></h6>
                        </label>
                       
                    </div>
               </form>
             
            </div>
        </div>
        <div class="row" style="margin-bottom: 20px;">
            <div class="col d-flex justify-content-center">
                <form id="formR1" style="border-bottom: 1px solid rgba(81, 80, 81, 0.22);height: 40px;">
                </form>
            </div>
        </div>
        <%Object.values(doctors).forEach(function(dr){%>
        <div class="row" style="margin-bottom: 10px;">
            <div class="col d-flex justify-content-center">
               <form id="formR1" style="background-color: white;border: 1px solid rgba(173, 172, 173, 0.22);
               box-shadow: inset 0px 1px 7px rgba(121, 121, 121, 0.25);
               border-radius: 19px;height: 57px;" >
                    <div class="form-group row mb-3">
                        <label class="col-sm-4 col-form-label d-flex justify-content-center">
                            <h6 style="margin-top: 10px;color: #7b7878cc;"><b>
                                <%= dr.DrName%>
                            </b></h6>
                        </label>
                        <label class="col-sm-4 col-form-label d-flex justify-content-center">
                            <h6 style="margin-top: 10px;color: #7b7878cc;"><b>
                                <%= dr.MedicalCertificate%>
                            </b></h6>
                        </label>
                        <label class="col-sm-2 col-form-label d-flex justify-content-center">
                            <button type="submit" id="btnAd" onclick="PassDr()">
                            <a style="text-decoration: none;color: white;"  href="/addDr/<%= dr._id%>">
                               Pass
                            </a></button>
                        </label>
                        <label class="col-sm-2 col-form-label d-flex justify-content-center">
                            <button type="submit" id="btndel">
                            <a style="text-decoration: none;color: white;" href="/del/<%= dr._id%>" onclick="return confirm('Do you want to delete?')">
                                Delete
                            </a></button>
                        </label>
                       
                    </div>
               </form>
             
            </div>
        </div>
        <% }) %>
    </div>
    <script src="/js/admin.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>